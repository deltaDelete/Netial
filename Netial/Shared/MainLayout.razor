<PageTitle>Netial</PageTitle>
<Header />
<MudThemeProvider IsDarkMode="true" Theme="Theme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<div class="page">
    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {

