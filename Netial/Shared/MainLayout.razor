        PaletteDark = new PaletteDark() {
            Background = new MudColor("#333333"),
            BackgroundGrey = new MudColor("#393939"),
            Surface = new MudColor("#444444"),
            TextPrimary = new MudColor(0xFF, 0xFF, 0xFF, 0xFF),
            Primary = new MudColor("#f9f9f9")
        },
        Typography = new Typography() {
            Default = new Default() {
                FontFamily = new [] {"Montserrat", "Segoe UI", "Tahoma", "Geneva", "Verdana", "sans-serif"},
                FontSize = "16px"
            }
        }
    };

}
